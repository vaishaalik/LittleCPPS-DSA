#include<stdio.h>
void input(int *a, int *b, int *c)
{
	printf("enter the three values:");
	scanf("%d%d%d", a, b, c);
}
int compute(int a, int b, int c, int *smallest)
{
	if (b<a) 
	{
   	 if (b<c) 
		{
        	*smallest=b;
		} 
	else
		{
                *smallest=c;
		}
	}
else
	{
    	if (a<c)
		{
        	*smallest=a;
		} 
	else   
		{
                *smallest=c;
		}
	}
}
int output(int smallest)
{
printf("%d", smallest);
}
int main()
{
int a,b,c,smallest;
input(&a,&b,&c);
compute(a,b,c,&smallest);
output(smallest);
}
