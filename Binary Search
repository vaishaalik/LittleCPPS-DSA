#include <stdio.h>
#include<stdlib.h>
int binary_search(int [], int, int, int);

int main()
{
    int key,n , i,result;
    int a[50];
 
    printf("Enter array size: ");
    scanf("%d", &n);
    printf("Enter elements\n");
    for(i = 0; i < n; i++)
    {
        scanf("%d",&a[i]);
    }
    printf("\n");
    printf("Enter key to search\n");
    scanf("%d", &key);
    result=binary_search(a, 0, n, key);    
     if(result==1)
    {
        printf("element not found");
    }
    else
    {
        printf("element %d is found at [%d] location in the array",key,result+1);
    }
 return 0;
}
int binary_search (int a[], int num, int l, int h) 
{ 
      if (l > h) 
      {
           printf("value not found"); 
      } 
      else 
      { 
        /* Calculate mid element */ 
        int mid = (l + h) / 2 ; 
 
        if(a[mid]==num) 
        { 
            printf("number_is_found");
 
         } if (a[mid] > num) 
         { 
              /* key is in lower subset of array */ 
             //recursive call 
            binary_search (a, num, l, mid-1); 
 
         } else if (a[mid] < num) 
         { 
            /* Key is in higher subset */ 
           //recursive call 
           binary_search (a, num, mid +1 , h); 
         } 
      }
}
